{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "./dist",
    },
    "include": [
        "./src/*",
        "src/index.js"
,  ]
}